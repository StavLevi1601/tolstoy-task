{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./public", // change this line
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
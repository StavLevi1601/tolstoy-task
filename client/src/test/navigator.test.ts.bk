import { test, expect } from "@playwright/test";

test("redirects to a new page after successful submission", async ({
  page,
}) => {
  await page.goto("http://localhost:5173");

  // הזנת כתובות URL בטופס
  await page.fill(
    'input[placeholder="Enter Url"]:nth-of-type(1)',
    "https://www.google.com"
  );
  await page.fill(
    'input[placeholder="Enter Url"]:nth-of-type(2)',
    "https://www.facebook.com"
  );
  await page.fill(
    'input[placeholder="Enter Url"]:nth-of-type(3)',
    "https://www.twitter.com"
  );

  // לחיצה על כפתור ההגשה
  await page.click('button[type="submit"]');

  // המתנה לניווט
  await page.waitForNavigation();

  // בדיקת ה-URL של הדף החדש
  expect(page.url()).toBe("http://localhost:5173/success"); // דוגמא בלבד
});
